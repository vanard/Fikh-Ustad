<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:text="Hadits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/tv_hadits_title" android:background="@color/green_app"
            android:textSize="16sp" android:textColor="@android:color/white" android:padding="4dp"
            android:textStyle="bold"/>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/tv_hadits_arab_text" android:padding="8dp"
            android:textSize="18sp" android:textColor="@android:color/black"/>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/tv_hadits_text"
            android:textColor="@android:color/black" android:padding="8dp"/>
</LinearLayout>
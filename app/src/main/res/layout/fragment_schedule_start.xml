<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   tools:context=".views.activity.editprof.bottomsheetfragment.ScheduleFragment">

    <Button
            android:gravity="center"
            android:text="Save"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/tv_save_start"
            android:textColor="@color/green_app" android:textStyle="bold" android:textSize="18sp"
            android:background="@android:color/transparent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cb_senin_day_start"
            app:layout_constraintEnd_toEndOf="@+id/cb_minggu_day_start"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/cb_everyday_start"
            app:layout_constraintHorizontal_bias="0.5" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <CheckBox
            android:button="@null"
            android:background="@drawable/selector_senin"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:id="@+id/cb_senin_day_start"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/view3"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/cb_selasa_day_start"
    />
    <CheckBox
            android:button="@null"
            android:background="@drawable/selector_selasa"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:id="@+id/cb_selasa_day_start" app:layout_constraintStart_toEndOf="@+id/cb_senin_day_start"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/cb_senin_day_start" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintTop_toTopOf="@+id/cb_senin_day_start"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/cb_rabu_day_start"/>
    <CheckBox
            android:button="@null"
            android:background="@drawable/selector_rabu"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:id="@+id/cb_rabu_day_start" app:layout_constraintStart_toEndOf="@+id/cb_selasa_day_start"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@+id/cb_selasa_day_start"
            app:layout_constraintBottom_toBottomOf="@+id/cb_selasa_day_start"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/cb_kamis_day_start"/>
    <CheckBox
            android:button="@null"
            android:background="@drawable/selector_kamis"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:id="@+id/cb_kamis_day_start" app:layout_constraintStart_toEndOf="@+id/cb_rabu_day_start"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/cb_rabu_day_start" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintTop_toTopOf="@+id/cb_rabu_day_start"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/cb_jumat_day_start"/>
    <CheckBox
            android:button="@null"
            android:background="@drawable/selector_jumat"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:id="@+id/cb_jumat_day_start"
            app:layout_constraintTop_toTopOf="@+id/cb_kamis_day_start"
            app:layout_constraintStart_toEndOf="@+id/cb_kamis_day_start"
            app:layout_constraintBottom_toBottomOf="@+id/cb_kamis_day_start" android:layout_marginStart="12dp"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/cb_sabtu_day_start"/>
    <CheckBox
            android:button="@null"
            android:background="@drawable/selector_sabtu"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:id="@+id/cb_sabtu_day_start" app:layout_constraintStart_toEndOf="@+id/cb_jumat_day_start"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/cb_jumat_day_start" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintTop_toTopOf="@+id/cb_jumat_day_start"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/cb_minggu_day_start"/>
    <CheckBox
            android:button="@null"
            android:background="@drawable/selector_minggu"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:id="@+id/cb_minggu_day_start" app:layout_constraintStart_toEndOf="@+id/cb_sabtu_day_start"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/cb_sabtu_day_start"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintTop_toTopOf="@+id/cb_sabtu_day_start"
            app:layout_constraintHorizontal_bias="0.5" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <CheckBox
            android:text="Setiap Hari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cb_everyday_start"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/cb_senin_day_start"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/tv_save_start"
            app:layout_constraintTop_toTopOf="@+id/tv_save_start"
            app:layout_constraintBottom_toBottomOf="@+id/tv_save_start"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/schedule_start_linear"
            android:gravity="end|center_vertical" android:padding="12dp">

        <TextView android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content"
                  android:text="Mulai"
                  android:textColor="@android:color/black" android:textSize="18sp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="16:15"
                  android:textSize="18sp" android:padding="4dp" android:id="@+id/tv_time_start"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="match_parent"
                   android:src="@drawable/ic_chevron_right"/>

    </LinearLayout>

    <View android:layout_width="0dp" android:layout_height="2dp" android:background="@color/grey_app"
          app:layout_constraintTop_toBottomOf="@+id/schedule_start_linear"
          app:layout_constraintStart_toStartOf="@+id/schedule_start_linear"
          app:layout_constraintEnd_toEndOf="@+id/schedule_start_linear" android:id="@+id/view2"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/view2"
            android:gravity="end|center_vertical" android:id="@+id/schedule_end_linear" android:padding="12dp">

        <TextView android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content"
                  android:text="Selesai"
                  android:textColor="@android:color/black" android:textSize="18sp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="16:15"
                  android:textSize="18sp" android:padding="4dp" android:id="@+id/tv_time_end"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="match_parent"
                   android:src="@drawable/ic_chevron_right"/>

    </LinearLayout>

    <View android:layout_width="0dp" android:layout_height="2dp" android:background="@color/grey_app"
          app:layout_constraintTop_toBottomOf="@+id/schedule_end_linear"
          app:layout_constraintStart_toStartOf="@+id/schedule_end_linear"
          app:layout_constraintEnd_toEndOf="@+id/schedule_end_linear" android:id="@+id/view3"/>

</androidx.constraintlayout.widget.ConstraintLayout>
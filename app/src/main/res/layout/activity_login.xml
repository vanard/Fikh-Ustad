<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.activity.login.LoginActivity" android:background="@android:color/white">
    <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp" android:src="@drawable/logo_fikh_ustad"
            android:id="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="96dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.498"/>
    <TextView
            android:text="Login Ustaz Fikh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textSize="18sp" android:textColor="@color/green_app"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/email_et_login" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:hint="Email"
            android:background="@drawable/border_et_register" android:padding="16dp"
            android:inputType="textEmailAddress"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/pass_et_login"
            app:layout_constraintStart_toStartOf="@+id/email_et_login"
            app:layout_constraintEnd_toEndOf="@+id/email_et_login" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/email_et_login" android:hint="Kata Sandi" android:padding="16dp"
            android:background="@drawable/border_et_register"/>
    <Button
            android:text="Login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_login_login"
            android:background="@drawable/btn_green_register"
            app:layout_constraintStart_toStartOf="@+id/pass_et_login"
            app:layout_constraintEnd_toEndOf="@+id/pass_et_login" android:textColor="@android:color/white"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_lupa_pass"/>
    <TextView
            android:text="Belum punya akun? Daftar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_daftar_login" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
    />
    <TextView
            android:text="Lupa kata sandi?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_lupa_pass" app:layout_constraintEnd_toEndOf="@+id/pass_et_login"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/pass_et_login" android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
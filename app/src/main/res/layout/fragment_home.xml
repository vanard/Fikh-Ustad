<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".views.fragment.home.HomeFragment"
                                                   android:background="@drawable/bg_gradient_ustad">


    <ScrollView android:layout_height="0dp"
                android:layout_width="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/bg_chip"
                android:layout_margin="12dp"
    >

        <LinearLayout android:layout_height="wrap_content"
                      android:layout_width="match_parent" android:orientation="vertical"
                      android:id="@+id/linearLayout6">
            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                               android:layout_height="wrap_content"
                                                               android:layout_marginStart="8dp"
                                                               android:layout_marginEnd="8dp"
                                                               android:layout_marginTop="8dp"
                                                               android:layout_marginBottom="4dp">

                <de.hdodenhof.circleimageview.CircleImageView android:layout_width="64dp"
                                                              android:layout_height="64dp"
                                                              app:layout_constraintEnd_toEndOf="parent"
                                                              android:layout_marginEnd="8dp"
                                                              app:layout_constraintStart_toStartOf="parent"
                                                              android:layout_marginStart="8dp"
                                                              android:layout_marginTop="16dp"
                                                              app:layout_constraintTop_toTopOf="parent"
                                                              android:scaleType="centerCrop"
                                                              android:src="@drawable/ic_account_circle"
                                                              android:id="@+id/img_home"/>
                <TextView
                        android:text="Ustad Name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/name_tv_home" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp" app:layout_constraintTop_toBottomOf="@+id/img_home"
                        android:textAlignment="center" android:layout_marginTop="8dp" android:textSize="16sp"
                        android:textColor="@android:color/black"
                />
                <TextView
                        android:text="Rate Pesan dibalas"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/rate_tv_home"
                        android:textSize="13sp" app:layout_constraintTop_toTopOf="@+id/imageView14"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView14"
                        app:layout_constraintStart_toEndOf="@+id/imageView14" app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"/>
                <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        app:srcCompat="@drawable/ic_mode_comment"
                        android:id="@+id/imageView14"
                        android:alpha=".50"
                        app:layout_constraintTop_toBottomOf="@+id/name_tv_home" android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintEnd_toStartOf="@+id/rate_tv_home" android:layout_marginStart="108dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp">
                <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rv_home" android:layout_marginTop="8dp" android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"/>

            </RelativeLayout>
            <TextView
                    android:text="Tempat, Tanggal Lahir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView16"
                    android:textColor="@android:color/black" android:layout_margin="12dp"/>
            <TextView
                    android:text="Sumatera Utara, 18 Mei 1977"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/datebirt_tv_home"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="12dp"/>
            <TextView
                    android:text="Riwayat Pendidikan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView18" android:layout_margin="12dp"
                    android:textColor="@android:color/black"/>
            <TextView
                    android:text="S2 Dar El Hadith El Hassania, Kerajaan Maroko"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/pendidikan_tv_home"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="12dp"/>
            <TextView
                    android:text="Bidang Keilmuan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView20" android:layout_margin="12dp"
                    android:textColor="@android:color/black"/>
            <TextView
                    android:text="Ilmu Hadist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/keilmuan_tv_home"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="12dp"/>
            <TextView
                    android:text="Firkah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView22"
                    android:textColor="@android:color/black" android:layout_margin="12dp"/>
            <TextView
                    android:text="Sunni"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/firkah_tv_home"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="12dp"/>
            <TextView
                    android:text="Mazhab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView24" android:layout_margin="12dp"
                    android:textColor="@android:color/black"/>
            <TextView
                    android:text="Syafi'i"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/mazhab_tv_home"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="12dp"/>
            <Button android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:id="@+id/edit_btn_home" android:text="Edit Profile" android:layout_margin="4dp"/>
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
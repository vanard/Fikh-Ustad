<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".views.activity.detailmateri.DetailMateriActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".views.activity.detailmateri.DetailMateriActivity">

        <ImageView
                android:layout_width="0dp"
                android:layout_height="172dp" android:src="@drawable/ic_image"
                android:id="@+id/img_detailmateri" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="parent" android:scaleType="centerCrop"/>
        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_author_detailmateri" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/img_detailmateri"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/tv_date_detailmateri"
                android:layout_marginEnd="4dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_date_detailmateri" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/img_detailmateri"
                app:layout_constraintStart_toEndOf="@+id/tv_author_detailmateri" app:layout_constraintHorizontal_bias="0.5"
                android:layout_marginStart="4dp" android:textAlignment="textEnd"/>
        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_description_detailmateri"
                app:layout_constraintTop_toBottomOf="@+id/view7" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="16dp"/>
        <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@drawable/shadow"
                android:id="@+id/view7" app:layout_constraintTop_toBottomOf="@+id/tv_author_detailmateri"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="16dp"/>
        <TextView
                android:text="Support By Konsultasi Syariah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintTop_toBottomOf="@+id/tv_description_detailmateri"
                android:layout_marginBottom="24dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
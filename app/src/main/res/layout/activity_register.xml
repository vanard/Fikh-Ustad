<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.activity.register.RegisterActivity" android:background="@android:color/white">

    <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:src="@drawable/logo_app_fikh"/>
    <TextView
            android:text="Registrasi Ustad Fikh"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:textSize="18sp"
            android:textStyle="bold" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_width="0dp" android:textAlignment="center"
            android:textColor="@color/green_app"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/name_et_register"
            android:textSize="14sp" android:hint="Nama" android:padding="16dp"
            android:background="@drawable/border_et_register" android:textColorHint="@color/colorTextHint"
            app:layout_constraintEnd_toEndOf="@+id/textView" app:layout_constraintStart_toStartOf="@+id/textView"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email_et_register"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/name_et_register" app:layout_constraintEnd_toEndOf="@+id/name_et_register"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/name_et_register" android:hint="Email"
            android:padding="16dp" android:background="@drawable/border_et_register"
            android:textColorHint="@color/colorTextHint"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/phone_et_register"
            android:textSize="14sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/email_et_register"
            app:layout_constraintStart_toStartOf="@+id/email_et_register" app:layout_constraintEnd_toEndOf="@+id/email_et_register"
            android:hint="Nomor Handphone" android:maxLength="14" android:padding="16dp"
            android:background="@drawable/border_et_register" android:textColorHint="@color/colorTextHint"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/pass_et_register"
            android:textSize="14sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/phone_et_register" app:layout_constraintStart_toStartOf="@+id/phone_et_register"
            app:layout_constraintEnd_toEndOf="@+id/phone_et_register" android:hint="Kata Sandi" android:padding="16dp"
            android:background="@drawable/border_et_register" android:textColorHint="@color/colorTextHint"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/confpass_et_register"
            android:textSize="14sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/pass_et_register"
            app:layout_constraintStart_toStartOf="@+id/pass_et_register" app:layout_constraintEnd_toEndOf="@+id/pass_et_register"
            android:hint="Ulangi Kata Sandi" android:padding="16dp" android:background="@drawable/border_et_register"
            android:textColorHint="@color/colorTextHint"/>
    <TextView
            android:text="Sudah punya akun? Masuk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_login_register" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/btn_regist_register"
            app:layout_constraintBottom_toBottomOf="@+id/btn_regist_register"
            android:textSize="16sp"/>
    <Button
            android:text="Lanjut"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_regist_register" android:textAllCaps="false"
            android:textColor="@android:color/white" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/confpass_et_register" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:background="@drawable/btn_green_register"
            app:layout_constraintStart_toEndOf="@+id/tv_login_register" android:layout_marginStart="32dp"
            app:layout_constraintVertical_bias="1.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.reset.ResetActivity" android:background="@android:color/white">

    <TextView
            android:text="Reset Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="24sp" android:textColor="@color/green_app"
            android:textStyle="bold"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/et_email_reset" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:background="@drawable/border_et_register"
            android:padding="16dp" android:hint="Email"/>
    <Button
            android:text="Send Email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_reset_reset" app:layout_constraintStart_toStartOf="@+id/et_email_reset"
            app:layout_constraintEnd_toEndOf="@+id/et_email_reset" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/et_email_reset"
            android:background="@drawable/btn_green_register" android:textColor="@android:color/white"/>
</androidx.constraintlayout.widget.ConstraintLayout>
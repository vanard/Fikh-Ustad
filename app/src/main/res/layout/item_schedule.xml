<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="3dp"
        app:cardElevation="0dp">

    <LinearLayout android:gravity="center"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Mantul"
                  android:id="@+id/tv_day_schedule"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="69:69"
                  android:id="@+id/tv_time_schedule"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
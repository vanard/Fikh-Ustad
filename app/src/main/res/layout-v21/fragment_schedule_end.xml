<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   tools:context=".views.activity.editprof.bottomsheetfragment.ScheduleEndFragment">

    <TimePicker android:layout_width="0dp" android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/timePicker_end"
                android:timePickerMode="spinner"
                app:layout_constraintEnd_toStartOf="@+id/tv_save_end" android:layout_marginEnd="16dp"/>
    <TextView
            android:gravity="center"
            android:text="Save"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/tv_save_end" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/timePicker_end"
            android:textColor="@color/green_app" android:textStyle="bold" android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@+id/timePicker_end" android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"/>
    <CheckBox
            android:button="@null"
            android:background="@drawable/selector_senin"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/cb_senin_day_end" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/timePicker_end" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/cb_selasa_day_end" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <CheckBox
            android:button="@null"
            android:background="@drawable/selector_selasa"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/cb_selasa_day_end" app:layout_constraintStart_toEndOf="@+id/cb_senin_day_end"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/timePicker_end" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/cb_rabu_day_end" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <CheckBox
            android:button="@null"
            android:background="@drawable/selector_rabu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/cb_rabu_day_end" app:layout_constraintStart_toEndOf="@+id/cb_selasa_day_end"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/timePicker_end"
            android:layout_marginTop="8dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/cb_kamis_day_end" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <CheckBox
            android:button="@null"
            android:background="@drawable/selector_kamis"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/cb_kamis_day_end" app:layout_constraintStart_toEndOf="@+id/cb_rabu_day_end"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/timePicker_end"
            android:layout_marginTop="8dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/cb_jumat_day_end" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <CheckBox
            android:button="@null"
            android:background="@drawable/selector_jumat"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/cb_jumat_day_end" app:layout_constraintStart_toEndOf="@+id/cb_kamis_day_end"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/timePicker_end" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/cb_sabtu_day_end" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <CheckBox
            android:button="@null"
            android:background="@drawable/selector_sabtu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/cb_sabtu_day_end" app:layout_constraintStart_toEndOf="@+id/cb_jumat_day_end"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/timePicker_end" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/cb_minggu_day_end" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <CheckBox
            android:button="@null"
            android:background="@drawable/selector_minggu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/cb_minggu_day_end" app:layout_constraintStart_toEndOf="@+id/cb_sabtu_day_end"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/timePicker_end"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>

    <CheckBox
            android:text="Tiap Hari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cb_everyday_end"
            app:layout_constraintTop_toBottomOf="@+id/cb_senin_day_end"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>